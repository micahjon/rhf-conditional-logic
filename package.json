{
  "name": "rhf-conditional-logic",
  "description": "Conditional Logic for React Hook Forms. Fully typed and compatible with resolvers (e.g. Zod)",
  "type": "module",
  "version": "0.1.1",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/rhf-conditional-logic.d.ts",
      "import": "./dist/rhf-conditional-logic.modern.js",
      "require": "./dist/rhf-conditional-logic.cjs"
    }
  },
  "types": "./dist/rhf-conditional-logic.d.ts",
  "main": "./dist/rhf-conditional-logic.cjs",
  "module": "./dist/rhf-conditional-logic.js",
  "unpkg": "./dist/rhf-conditional-logic.umd.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/micahjon/rhf-conditional-logic.git"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "rimraf dist && microbundle --compress false && microbundle --f umd",
    "tsc": "tsc",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:unit": "vitest --config ./tests-unit/vitest.config.ts",
    "lint:scripts": "eslint . --ext .ts",
    "format:scripts": "prettier . --write",
    "pub": "npm run build && npm publish"
  },
  "dependencies": {
    "ts-extras": "^0.11.0"
  },
  "peerDependencies": {
    "react-hook-form": "^7.0.0"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.1.1",
    "@playwright/test": "^1.39.0",
    "@types/jsdom": "^21.1.1",
    "@types/lodash-es": "^4.17.10",
    "@types/node": "^20.4.9",
    "@types/react": "^18.2.31",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lint-staged": "^13.2.3",
    "lodash-es": "^4.17.21",
    "microbundle": "^0.15.1",
    "postcss": "^8.4.27",
    "postcss-scss": "^4.0.6",
    "prettier": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  }
}
